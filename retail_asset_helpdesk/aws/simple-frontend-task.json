{
  "family": "retail-helpdesk-frontend-simple",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::084828565262:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "084828565262.dkr.ecr.us-east-1.amazonaws.com/retail-helpdesk-frontend:latest",
      "cpu": 512,
      "memory": 1024,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "NEXT_PUBLIC_API_URL",
          "value": "http://BACKEND_IP:8000"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/retail-helpdesk-frontend-simple",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "frontend",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}
